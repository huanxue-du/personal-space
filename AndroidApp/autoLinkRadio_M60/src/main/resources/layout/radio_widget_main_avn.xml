<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true" >

    <!-- android:background="@drawable/radio_appwidget_bg_active" -->

    <RelativeLayout
        android:id="@+id/widget_relative_id"
        android:layout_width="416dp"
        android:layout_height="517dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/radio_appwidget_bg_none"
        android:clickable="true" >

        <TextView
            android:id="@+id/fmOrAm_switch_btn_w"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="250dp"
            android:alpha="0"
            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="FM"
            android:textColor="#ffffff"
            android:textSize="38sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/widget_relative_id_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="290dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/radio_main_freq_show_tv_w"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/switch_radio_pre_w"
                android:layout_toRightOf="@+id/switch_radio_pre_w"
                android:gravity="left"
                android:text="87.5"
                android:textColor="@color/yelou"
                android:textSize="75sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/radio_band_tv_w"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:alpha="1"
                android:gravity="center"
                android:text="MHz"
                android:textColor="@color/yelou"
                android:textSize="28sp"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="80dp" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/switch_radio_next_w"
                android:background="@android:color/transparent"
                android:enabled="false" />

            <ImageButton
                android:id="@+id/switch_radio_pre_w"
                android:layout_width="90dp"
                android:layout_height="146dp"
                android:background="@android:color/transparent"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/radio_appwidget_previous"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/radio_main_play_btn_w"
                android:layout_width="185dp"
                android:layout_height="146dp"
                android:layout_alignTop="@+id/switch_radio_pre_w"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/switch_radio_pre_w"
                android:layout_toRightOf="@+id/switch_radio_pre_w"
                android:background="@android:color/transparent"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/radio_appwidget_start_play"
                android:visibility="invisible" />

            <Button
                android:id="@+id/radio_main_into_radio"
                android:layout_width="185dp"
                android:layout_height="146dp"
                android:layout_alignTop="@+id/switch_radio_pre_w"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/switch_radio_pre_w"
                android:layout_toRightOf="@+id/switch_radio_pre_w"
                android:alpha="0.8"
                android:background="@android:color/transparent"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:text="@string/radio_avn_main"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:visibility="visible" />

            <ImageButton
                android:id="@+id/switch_radio_next_w"
                android:layout_width="90dp"
                android:layout_height="146dp"
                android:layout_alignTop="@id/switch_radio_pre_w"
                android:layout_marginLeft="1dp"
                android:layout_marginStart="1dp"
                android:layout_toEndOf="@id/radio_main_play_btn_w"
                android:layout_toRightOf="@id/radio_main_play_btn_w"
                android:background="@android:color/transparent"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:src="@drawable/radio_appwidget_next"
                android:visibility="visible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/radio_relativeLayout1"
            android:layout_width="244dp"
            android:layout_height="244dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:visibility="visible" >

            <!-- 90 -->

            <ImageView
                android:id="@+id/radio_album_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                android:src="@drawable/radio_img_radio" />

            <ImageView
                android:id="@+id/radio_album_cover"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerInParent="true"
                android:src="@drawable/radio_appwidget_album_art_unknown"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/radio_title_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/radio_album_cover"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:visibility="invisible" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>