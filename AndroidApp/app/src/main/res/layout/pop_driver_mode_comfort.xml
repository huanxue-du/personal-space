<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="679px"
  android:layout_height="512px">


    <RelativeLayout
      android:layout_width="642px"
      android:layout_height="475px"
      android:layout_centerInParent="true"
      android:background="@drawable/usm_pop_bg">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="25px"
          android:text="@string/app_name"
          android:textColor="@color/colorWhite"
          android:textSize="34px" />


        <ImageView
          android:id="@+id/pop_iv_driver_mode"
          android:layout_width="match_parent"
          android:layout_height="280px"
          android:layout_marginTop="90px"
          android:background="@drawable/pop_comfort_view" />

        <TextView
          android:id="@+id/pop_tv_driver_mode"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="60px"
          android:layout_marginTop="110px"
          android:text="@string/app_name"
          android:textColor="@color/colorpop_dirvemode_content"
          android:textSize="26px" />

        <TextView
          android:id="@+id/pop_tv_driver_mode_content"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:layout_marginBottom="35px"
          android:gravity="center_horizontal"
          android:text="@string/app_name"
          android:textColor="@color/colorpop_dirvemode_content"
          android:textSize="26px" />

    </RelativeLayout>

    <ImageView
      android:id="@+id/pop_iv_close"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:layout_marginTop="-0px"
      android:layout_marginRight="-0px"
      android:src="@drawable/pop_close_selector" />
</RelativeLayout>