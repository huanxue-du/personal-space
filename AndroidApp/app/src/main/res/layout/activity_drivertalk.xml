<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/linearLayout"
  android:background="@color/colorLightBlue"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

    <FrameLayout
      android:id="@+id/usm_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/su2_title"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent">

        <ImageView
          android:id="@+id/usm_icon_img"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="30dp"
          android:src="@drawable/drivertalk_title_icon" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:layout_marginLeft="100dp"
          android:text="@string/app_name"
          android:textColor="@color/colorAccent"
          android:textSize="38sp" />


        <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:layout_marginRight="110dp"
          android:src="@drawable/su2_title_divide_line" />

        <ImageView
          android:id="@+id/iv_title_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="right|center_vertical"
          android:background="@drawable/su2_back" />
    </FrameLayout>

    <ImageView
      android:id="@+id/imageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/qt_bg"
      app:layout_constraintTop_toBottomOf="@+id/usm_title"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"/>


    <Button
      android:id="@+id/dt_start_end_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/common_btn_bg_selector"
      android:padding="15dp"
      android:text="@string/app_name"
      android:textColor="@color/colorAccent"
      android:textAllCaps="false"
      android:textSize="32sp"
      android:layout_marginTop="50dp"
      app:layout_constraintTop_toBottomOf="@+id/imageView"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

    <TextView
      android:id="@+id/dt_tip_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/app_name"
      android:textColor="@color/colorAccent"
      android:layout_marginTop="30dp"
      android:textSize="26sp"
      app:layout_constraintTop_toBottomOf="@+id/dt_start_end_btn"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>